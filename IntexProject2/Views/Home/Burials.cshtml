@{
}
@model BurialViewModel

<div class="text-center">
    Pages
    <div page-model="@Model.PageInfo" page-action="Burials" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-outline-dark"
         page-class-selected="btn-dark" class="btn-group pull-right m-1">
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (Burialmain b in Model.Burials)
        {

            <div class="col-sm-4">
                <partial name="BurialSummary" model="b" />
            </div>

        }
    </div>
</div>

@{
}
@model Burialmain

<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="BurialInfo" asp-route-burialID="@Model.Id">
    <div class="card card-outline-primary m-1 p-1">
        <div>
            <h5>
                @Model.Squarenorthsouth @Model.Northsouth @Model.Squareeastwest @Model.Eastwest @Model.Area #@Model.Burialnumber
            </h5>
        </div>
        <table>
        
            <tr>
                <th >Age At Death</th>
                <td>
                
                    @if (Model.Ageatdeath == "A")
                    {
                        <text>Adult -- 15+</text>
                    }
                    else if (Model.Ageatdeath == "C")
                    {
                        <text>Child -- 3-15</text>
                    }
                    else if (Model.Ageatdeath == "I")
                    {
                        <text>Infant -- 1-3</text>
                    }
                    else if (Model.Ageatdeath == "N")
                    {
                        <text>Newborn -- 0-1</text>
                    }
                    else
                    {
                        <text>No Data</text>
                    }

                
                </td>
            </tr>
            <tr>
                <th >Burial Depth</th>
                <td>
                    @if (Model.Depth != "")
                    {
                        <text>@Model.Depth</text>
                    }
                    else
                    {
                        <text>No Data</text>
                    }
                </td>
            </tr>

            <tr>
                <th >Estimate Stature</th>
            </tr>

            <tr>
                <th >Hair Color</th>
                <td>
                    @if (Model.Haircolor == "B")
                    {
                        <text>Brown/Dark Brown/Light Brown</text>
                    }
                    else if (Model.Haircolor == "K")
                    {
                        <text>Black</text>
                    }
                    else if (Model.Haircolor == "A")
                    {
                        <text>Brown-Red</text>
                    }
                    else if (Model.Haircolor == "R")
                    {
                        <text>Red</text>
                    }
                    else if (Model.Haircolor == "D")
                    {
                        <text>Blond</text>
                    }
                    else
                    {
                        <text>No Data</text>
                    }
                </td>
            </tr>

            <tr>
                <th >Head Direction</th>
                <td>
                    @if (Model.Headdirection == "E")
                    {
                        <text>East-Facing</text>
                    }
                    else if (Model.Headdirection == "W")
                    {
                        <text>West-Facing</text>
                    }
                    else if (Model.Headdirection == "I")
                    {
                        <text>Indeterminate</text>
                    }
                    else
                    {
                        <text>No Data</text>
                    }
                </td>
            </tr>
            
            <tr>
                <th >Textile Color</th>
            </tr>

            <tr>
                <th >Textile Function</th>
            </tr>
            
            <tr>
                <th >Textile Structure</th>
            </tr>
            <tr>
                <th >Sex</th>
                <td>
                    @if (Model.Sex == "M")
                    {
                        <text>Male</text>
                    }
                    else if (Model.Sex == "F")
                    {
                        <text>Female</text>
                    }
                    else
                    {
                        <text>No Data</text>
                    }
                </td>

            </tr>
        </table>

        </div>
</a>